<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.RecipesApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Override default Material colors with your custom colors -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorOnSecondary">@color/green</item>

    </style>

    <style name="Theme.RecipesApp" parent="Base.Theme.RecipesApp" />

    <!-- Custom Chip Style -->
    <style name="customChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/chip_text_color</item>
    </style>




    <style name="customTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">5dp</item>
        <item name="background">@color/green</item>
        <item name="tabSelectedTextColor">@color/white</item>

    </style>

    <style name="customTabLayoutText" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
